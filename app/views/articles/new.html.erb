<html>
<head>
<style>
 #header {
    align:center;
    text-align:center;
    background: #ccc;
    padding: 20px;
    }

 body {
       background-color:linen;
       text-align:center;
      
 }
 #error-explanation {
       align:center; 

 }
#footer {
    text-align:center;
    position: fixed;
    bottom: 0px;
    clear: right;
    background: #eee;
    padding: 20px;
    width: 100%;
    height: 20px;
    }
  
</style>
</head>

<body>

<div id="header">
<header>
<h1>Welcome to first Rails Application </h1>
</header>
</div>

<h1>New Article</h1>
<%= form_for :article,url:articles_path do |f| %>
 <% if @article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 

<%=link_to 'Go back',articles_path %>

<div id="footer">
<footer>
@All Rights Reserved<br>
<%=link_to 'Home',welcome_index_path %>
</footer>
</div>
</body>

</html>